{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "es2021",
      "DOM"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "outDir": "build",
    "rootDir": "src",
    "preserveConstEnums": true,
    "allowJs": true,
    //"noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
